<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/booking_id_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Booking ID"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/car_model_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Model"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/pickup_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Date (yyyy-mm-dd)"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/return_date_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Return Date (yyyy-mm-dd)"
            android:inputType="date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/duration_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/insurance_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Insurance"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/gps_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GPS"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cancel" />

    </LinearLayout>

</ScrollView>
